{
  "private": true,
  "name": "wordgames",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"vite\"",
    "dev:frontend": "vite",
    "dev:backend": "node server/server.js",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "test": "jest",
    "test:ollama": "node server/test-ollama.js",
    "test:server": "node server/test-full-flow.js",
    "test:unique": "node server/test-unique-phrases.js",
    "test:multi-session": "node server/test-multi-session-unique.js",
    "server": "node server/server.js",
    "start": "npm run build && npm run server"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "concurrently": "^9.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.0",
    "eslint": "^8.30.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.0.0",
    "jest-preset-preact": "^4.0.5",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^3.2.1",
    "sqlite3": "^5.1.7"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
